<h3>Iniciar sesión</h3>

<hr>

<%= form_with url: sign_in_path do |form| %>
  <div class="mb-3">
    <%= form.label "Correo electrónico", class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Ingrese su correo electrónico..." %>
  </div>
  <div class="mb-3">
    <%= form.label "Contraseña", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Ingrese su contraseña..." %>
  </div>
  <div class="text-center">
    <%= form.submit class: "btn btn-danger", value: "Iniciar sesión" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to "Registrarse", "/sign_up", class: "link-secondary" %>
</div>