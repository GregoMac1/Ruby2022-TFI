<div class="row">
  <div class="col">
    <h3>Turno</h3>
  </div>
  <div class="col" style="text-align: right;">
    <%= link_to "Modificar", edit_turn_path(@turn), class: "btn btn-warning" %>
    <%= link_to "Borrar", turn_path(@turn), class: "btn btn-danger", data: {
      turbo_method: "delete",
      turbo_confirm: "¿Estás seguro?"
    } %>
  </div>
</div>

<hr>

<p>
  <strong>Sucursal:</strong>
  <%= Branch.find(@turn.branch_id).name %>
</p>
<p>
  <strong>Fecha:</strong>
  <%= @turn.date.strftime("%d/%m/%Y") %>
</p>
<p>
  <strong>Hora:</strong>
  <%= @turn.time.strftime("%H:%M") %>
</p>
<p>
  <strong>Motivo:</strong>
  <%= @turn.reason %>
</p>
<p>
  <strong>Estado:</strong>
  <%= @turn.status %>
</p>
<p>
  <strong>Responsable:</strong>
  <%= @turn.manager_id %>
</p>
<p>
  <strong>Resultado:</strong>
  <%= @turn.result %>
</p>

<br>

<div class="text-center">
  <%= link_to "Volver", turns_path, class: "btn btn-secondary" %>
</div>